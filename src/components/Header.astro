---
import { SwitchTheme } from './js/SwitchTheme'
import { SwitchTheme2 } from './js/SwitchTheme2'
import { SwitchTheme3 } from './js/SwitchTheme3'
---

<header>
  <a class="home" aria-label="home" href="/">
    <div>HOME</div>
  </a>
  <div class="parent">
    <SwitchTheme client:visible />
    <SwitchTheme2 client:visible />
    <SwitchTheme3 client:visible />
  </div>
</header>

<style>
  header {
    width: 100%;
    z-index: 100;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;

    font-weight: 700;

    transition: 0.5s background-color cubic-bezier(0.85, 0.11, 1, 0.55), 0.5s color cubic-bezier(0.85, 0.11, 1, 0.55);

    margin-bottom: 50px;

    /* 25em: 400px, 37.5em: 600px, 56.25em: 900px */
    font-size: 1.3rem;

    opacity: 1;

    /*
    @media (min-width: 25em) {
      font-size: 1.7rem;
    }
    */
  }

  .home {
    width: 100px;
    height: 100%;
    padding: 5px;
    border: 2px solid #454545;
    margin-right: 10px;
    margin-bottom: 5px;
    background: #fff;

    font-size: 2rem;
    font-weight: 700;
    text-decoration: none !important;
    color: #000 !important;
  }
  .home:hover {
    border: 2px solid #e2bdf8;
    transition: border 0.2s ease;
  }

  .parent {
    width: 100px;
    height: 100%;

    display: flex;
    align-items: flex-start;
    flex-direction: column;

    border: 2px solid #454545;
    padding: 5px;
  }
</style>
